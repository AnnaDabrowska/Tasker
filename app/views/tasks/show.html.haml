#jobs
  .job
    %h1= @task.title
    %p= @task.description
    %p= @task.company
    %button.btn.btn-default= link_to "Wykonaj zadanie", @task.url
#links
  = link_to "Strona glowna", root_path, class: "btn btn-sm btn-default"
  = link_to "Edycja", edit_task_path(@task), class: "btn btn-sm btn-default"
  = link_to "Usun", task_path(@task), method: :delete, data: {confirm: "Czy chcesz usunac zadanie?"}, class: "btn btn-sm btn-default"
